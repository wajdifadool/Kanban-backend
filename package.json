{
  "name": "trello",
  "version": "1.0.0",
  "description": "Simple backend project setup with Express, MongoDB, and basic middleware.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:lifecycle": "jest --selectProjects lifecycle",
    "test:unit": "jest --selectProjects unit",
    "test": "npm run test:unit && npm run test:lifecycle",
    "test:lifecycle:single": "jest --selectProjects lifecycle --testPathPatterns",
    "test:unit:single": "jest --selectProjects unit --testPathPatterns"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/tests/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup.js"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "lifecycle",
        "testMatch": [
          "<rootDir>/tests/**/*.lifecycletest.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setupPersistent.js"
        ],
        "testEnvironment": "node"
      }
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "supertest": "^7.1.4"
  }
}
